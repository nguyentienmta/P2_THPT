<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Birthday</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Start date</th>
      <th>Isheadmaster</th>
      <th>Subject</th>
      <th>Certificate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.code %></td>
        <td><%= teacher.birthday %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.address %></td>
        <td><%= teacher.start_date %></td>
        <td><%= check_box_tag 'isHeadMaset', 'yes', teacher.isHeadMaster,disabled: true %></td>
        <td><%= teacher.certificate.name %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

