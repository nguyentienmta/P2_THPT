<h1>Students</h1>

<div class="row">
  <div class="col-lg-4 pull-left">
    <%= link_to 'New student', new_student_path,class: "btn btn-primary pull-left" %>
  </div>
  <div class="col-lg-4 pull-right">
    <%= simple_form_for :search, url: students_path,:html =>{id: 'movie_search'}, :method => :get do |f| %>
        <div class="input-group">
          <%= f.text_field :name, placeholder: 'Seach by name',autocomplete:"off", class: 'form-control',id:'search',:value => (params[:search].nil?)?'':params[:search][:name] %>
          <span class="input-group-btn">
              <%= f.button :submit, 'Search', class: 'btn btn-default' %>
            </span>
        </div>
        </div>
    <% end %>
    </div>

<table class="table">
  <thead>
  <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Birthday</th>
      <th>Sex</th>
      <th>Address</th>
      <th>Class room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.code %></td>
        <td><%= student.birthday %></td>
        <td><%= student.sex %></td>
        <td><%= student.address %></td>
        <td><%= student.class_room.name %> - <%= student.class_room.school_year.name %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

