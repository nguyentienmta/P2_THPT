<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :code %>

    <%= f.input :birthday %>

    <%= f.input :sex %>

    <%= f.input :address %>

    <%= f.association :class_room %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
