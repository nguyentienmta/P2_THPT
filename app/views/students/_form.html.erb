<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :code %>

    <%= f.input :birthday %>

    <%= f.input :sex,:label => "Sex", :collection => Student::SEX %>

    <%= f.input :address %>

    <%= f.association :class_room,:label_method => lambda { |class_room| "#{class_room.name}-#{class_room.school_year.code}" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
