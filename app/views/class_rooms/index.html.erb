<p id="notice"><%= notice %></p>

<h1>Class Rooms</h1>
<div class="row">
  <div class="col-lg-4 pull-left">
    <%= link_to 'New class', new_class_room_path,class: "btn btn-primary pull-left" %>
  </div>
  <div class="col-lg-4 pull-right">
    <%= simple_form_for :search, url: class_rooms_path,:html =>{id: 'movie_search'}, :method => :get do |f| %>
        <div class="input-group">
          <%= f.text_field :name, placeholder: 'Seach by name',autocomplete:"off", class: 'form-control',id:'search',:value => (params[:search].nil?)?'':params[:search][:name] %>
          <span class="input-group-btn">
              <%= f.button :submit, 'Search', class: 'btn btn-default' %>
            </span>
        </div>
        </div>
    <% end %>
    </div>

<table class="table">
  <thead>
  <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Maximum</th>
      <th>Description</th>
      <th>School year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @class_rooms.each do |class_room| %>
      <tr>
        <td><%= class_room.name %>-<%= class_room.school_year.code %></td>
        <td><%= class_room.code %></td>
        <td><%= class_room.maximum %></td>
        <td><%= class_room.description %></td>
        <td><%= class_room.school_year.code %></td>
        <td><%= link_to 'Show', class_room %></td>
        <td><%= link_to 'Edit', edit_class_room_path(class_room) %></td>
        <td><%= link_to 'Destroy', class_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

