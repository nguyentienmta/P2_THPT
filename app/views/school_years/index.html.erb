<div class="row">
  <div class="col-lg-4 pull-left">
    <%= link_to 'New School Year', new_school_year_path,class: "btn btn-primary pull-left" %>
  </div>
  <div class="col-lg-4 pull-right">
    <%= simple_form_for :search, url: school_years_path,:html =>{id: 'movie_search'}, :method => :get do |f| %>
        <div class="input-group">
          <%= f.text_field :name, placeholder: 'Seach by name',autocomplete:"off", class: 'form-control',id:'search',:value => (params[:search].nil?)?'':params[:search][:name] %>
          <span class="input-group-btn">
              <%= f.button :submit, 'Search', class: 'btn btn-default' %>
            </span>
        </div>
        </div>
    <% end %>
    </div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Start year</th>
      <th>End year</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school_years.each do |school_year| %>
      <tr>
        <td><%= school_year.name %></td>
        <td><%= school_year.code %></td>
        <td><%= school_year.start_year %></td>
        <td><%= school_year.end_year %></td>
        <td><%= school_year.description %></td>
        <td><%= link_to 'Show', school_year %></td>
        <td><%= link_to 'Edit', edit_school_year_path(school_year) %></td>
        <td><%= link_to 'Destroy', school_year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

