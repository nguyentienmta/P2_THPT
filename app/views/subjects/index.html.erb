<h1>Subjects</h1>
<div class="row">
  <div class="col-lg-4 pull-left">
    <%= link_to 'New Subject', new_subject_path,class: "btn btn-primary pull-left" %>
  </div>
  <div class="col-lg-4 pull-right">
    <%= simple_form_for :search, url: subjects_path,:html =>{id: 'movie_search'}, :method => :get do |f| %>
        <div class="input-group">
          <%= f.text_field :name, placeholder: 'Seach by name',autocomplete:"off", class: 'form-control',id:'search',:value => (params[:search].nil?)?'':params[:search][:name] %>
          <span class="input-group-btn">
              <%= f.button :submit, 'Search', class: 'btn btn-default' %>
            </span>
        </div>
        </div>
    <% end %>
</div>
<table class="table responsive">
  <thead>
  <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Lesson</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @subjects.length > 0 %>
  <% @subjects.each do |subject| %>
      <tr>
        <td width="120px"><%= subject.name %></td>
        <td width="100px"><%= subject.code %></td>
        <td width="50px"><%= subject.lesson %></td>
        <td ><%= subject.description %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  <% else %>
      <tr>
        <td>no results to display</td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-6">
  </div>
  <div class="col-md-6 margin-top-8 text-right">
    <%= will_paginate @admin_room_devices %><br>
  </div>
</div>
</div>